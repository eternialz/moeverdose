<h1> All News </h1>


<a href="<%= new_admin_news_path %>" class=" btn btn-pink"> Add a News </a>
<% @news.each do |new| %>
  <div>
    <h2> 
      <a href="<%= admin_news_path(new) %>"><%= new.title %></a>
    </h2>
    <p> <%= new.text[0...200] + '...' %></p>
    <a href="<%= admin_news_path(new)%>" data-method="delete" class="btn btn-blue"> Delete this News </a>
  </div>
<% end %>
