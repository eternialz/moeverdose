<div class="list">
    <% @authors.each do |a| %>
        <% cache ["author_index", a] do %>
            <ul>
                <li class="zone">
                    <%= link_to author_path(a), class: "title" do %>
                        <h5><%= a.name %></h5>
                    <% end %>
                    <a class="count" href="<%= edit_author_path(a) %>">
                        <%= fa_icon "edit" %>
                    </a>
                </li>
            </ul>
        <% end %>
    <% end %>
    <div class="general_pagination">
        <%= paginate @authors %>
    </div>
</div>
