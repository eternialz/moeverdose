<div class="author zone">
        <div class="col-12">
            <h2 class="username"><%= @author.name %></h2>
            <br />
            <p>Biography: <%= @author.biography.blank? ? "none" : @author.biography %></p>
            <p>Posts: <%= @tag.posts_count %></p>
            <a class="btn btn-pink" href="<%= posts_path(query: @tag.names[0]) %>">All Posts<%= fa_icon "eye" %></a>
            <a class="btn btn-blue" href="<%= edit_author_path(@author) %>">Edit<%= fa_icon "edit" %></a>
            <a class="btn btn-blue" href="<%= edit_tag_path(@tag) %>">Edit aliases<%= fa_icon "edit" %></a>
        </div>

        <div class="col-6">
            <h5>Aliases</h5>
            <% if @names.length > 1 %>
                <% @names.each do |n| %>
                    <p><%= n %></p>
                <% end %>
            <% else %>
                <p>No aliases</p>
            <% end %>
        </div>

        <div class="col-6">
            <h5>Website</h5>
            <% if !@website.blank? %>
                <p><a target="_blank "href="<%= @website %>"><%= @website %></a></p>
            <% else %>
                <p>No websites</p>
            <% end %>
        </div>

</div>
