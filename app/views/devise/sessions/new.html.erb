<div class="user_form zone">
  <h3>Log in</h3>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <span><%= fa_icon "envelope" %> email:</span>
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field">
      <span><%= fa_icon "unlock-alt" %> password:</span>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <label>
        <%= f.check_box :remember_me %>
        remember me
        </label>
      </div>
    <% end -%>

    <div class="actions">
      <button class="btn btn-blue" type="submit">Sign in <%= fa_icon "sign-in" %></button>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
