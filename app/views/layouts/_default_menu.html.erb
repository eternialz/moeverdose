<div class="container">
    <a href="<%= root_path %>"><h1><%= site_name %></h1></a>
    <span id="random"><%= cell(:random_message).(:show) %></span>
    <div class="user">
        <% if user_signed_in? %>
            <a class="avatar" href="<%= user_path(current_user.name) %>" id="my_account"><%= image_tag current_user.avatar(:tiny), width: 60, height: 60 %></a>
            <span><%= link_to current_user.name, user_path(current_user.name) %></span>
        <% else %>
            <a class="avatar" href="<%= new_user_registration_path %>"><%= image_tag image_path('default_user.png'), width: 60, height: 60 %></a>
            <span>Guest</span>
        <% end %>
    </div>
    <ul>
        <li><a id="menu_label"><%= fa_icon 'bars' %>Menu</a></li>
        <li><%= link_to 'Posts', posts_path, title: 'Posts' %></li>
        <li><%= link_to 'Upload', new_post_path, title: 'Upload' %></li>
        <li><%= link_to 'Tags', tags_path, title: 'Tags' %></li>
        <li><%= link_to 'Chat', chat_url, target: "_blank", title: 'Chat' %></li>
        <li><%= link_to 'About', "/pages/about", title: 'About' %></li>
        <li><%= link_to 'Help', "/pages/help/index", title: 'Help' %></li>
        <li>
            <%= link_to twitter_url, target: "_blank", title: 'Twitter' do %>
                <%= fa_icon "twitter"%>
            <% end %>
        </li>
    </ul>
</div>
