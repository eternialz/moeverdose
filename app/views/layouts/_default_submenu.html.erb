<div class="submenu">
    <label id="submenu_close">Close Menu <%= fa_icon "close" %></label>
    <ul>
        <h3><a href="<%= posts_path %>" title="Posts">Posts</a></h3>
        <li><a href="<%= posts_path %>" title="All Posts">All Posts</a></li>
        <li><%= link_to 'Random Post', random_path %></li>
        <li><a href="<%= new_post_path %>" title="Upload">Upload</a></li>
        <li><%= link_to 'Tags', tags_path, title: 'Tags' %></li>
        <li><%= link_to 'Help & Rules', '/pages/help/rules' %></li>
    </ul>

    <ul>
        <h3><%= link_to 'Community', 'https://discord.me/moeverdose', target: "_blank" %></h3>
        <li><%= link_to 'Chat', 'https://discord.me/moeverdose', target: "_blank" %></li>
        <li><%= link_to 'Users', '/users' %></li>
        <li><%= link_to 'Team', '/pages/team' %></li>
    </ul>

    <ul>
        <h3><%= link_to 'Moeverdose', '/pages/about' %></h3>

        <li><%= link_to 'About', '/pages/about' %></li>
        <li><%= link_to 'Source Code', '/pages/source' %></li>
        <li><%= link_to 'Terms of Service', '/pages/tos' %></li>
    </ul>

    <% if user_signed_in? %>
        <ul class="my-account">
            <h3><a href="<%= user_path(current_user.name) %>"><%= fa_icon "user" %> My Account</a></h3>
            <li><%= link_to "Profile", user_path(current_user.name) %></li>
            <li><%= link_to "Options", edit_user_path(current_user.name) %></li>
            <li><%= link_to 'Logout', destroy_user_session_path %></span></li>
        </ul>
    <% else %>
        <ul class="login register">
            <h3>Need an account?</h3>
            <p>With an account you can upload images, edit posts, add comments and many other things.</p>
            <p>No activation necessary</p>
            <%= link_to new_user_registration_path, class: 'btn btn-blue' do %>
            Sign up <%= fa_icon 'user-plus' %>
            <% end %>
        </ul>

        <ul class="login">
            <h3>Sign In</h3>
            <%= form_for(:user, id: 'login', :url => session_path(:user)) do |f| %>
            <%= f.email_field :email, placeholder: 'email', autocomplete: "off" %>
            <%= f.password_field :password, placeholder: 'password', autocomplete: "off" %>
            <%= link_to "Forgot your password?", new_password_path(:user) %>
            <button class="btn btn-blue" type="submit">Sign in <%= fa_icon "sign-in" %></button>
            <% end %>
        </ul>
    <% end %>
</div>
