<nav class="menu">
    <div class="row">
        <div class="container">
            <a href="<%= root_path %>"><h1><%= site_name %></h1></a>
            <span id="random"><%= cell(:random_message).(:show) %></span>
            <div class="user">
                <% if user_signed_in? %>
                    <a class="avatar" href="<%= user_path(current_user.name) %>" id="my_account"><%= image_tag current_user.avatar(:original), width: 60, height: 60 %></a>
                    <a href="<%= user_path(current_user.name) %>" id="username"><%= current_user.name %></span>
                <% else %>
                    <a class="avatar" href="<%= new_user_registration_path %>"><%= image_tag image_path('default_user.png'), width: 60, height: 60 %></a>
                <% end %>
            </div>
            <a id="menu_label"><%= fa_icon 'bars' %></a>
            <ul>
                <li><%= link_to 'Posts', posts_path, title: 'Posts' %></li>
                <li><%= link_to 'Upload', new_post_path, title: 'Upload' %></li>
                <li><%= link_to 'Tags', tags_path, title: 'Tags' %></li>
                <li><%= link_to 'Chat', chat_url, target: "_blank", title: 'Chat' %></li>
                <li><%= link_to 'About', "/pages/about", title: 'About' %></li>
                <li><%= link_to 'Help', "/pages/help/index", title: 'Help' %></li>
                <li>
                    <%= link_to twitter_url, target: "_blank", title: 'Twitter' do %>
                        <%= fa_icon "twitter"%>
                    <% end %>
                </li>
            </ul>
        </div>

        <div class="submenu" id="submenu">
            <ul>
                <h3><a href="<%= posts_path %>" title="Posts">Posts</a></h3>
                <li><a href="<%= posts_path %>" title="All Posts">All Posts</a></li>
                <li><%= link_to 'Random Post', random_path %></li>
                <li><a href="<%= new_post_path %>" title="Upload">Upload</a></li>
                <li><%= link_to 'Tags', tags_path, title: 'Tags' %></li>
                <li><%= link_to 'Help & Rules', '/pages/help/rules' %></li>
            </ul>

            <ul>
                <h3><%= link_to 'Community', chat_url, target: "_blank" %></h3>
                <li><%= link_to 'Chat', chat_url, target: "_blank", title: 'Chat' %></li>
                <li><%= link_to 'Users', users_path %></li>
                <li><%= link_to 'Team', '/pages/team' %></li>
                <li><%= link_to 'Twitter', twitter_url %></li>
            </ul>

            <ul>
                <h3><%= link_to site_name, '/pages/about' %></h3>

                <li><%= link_to 'About', '/pages/about' %></li>
                <li><%= link_to 'Source Code', '/pages/source' %></li>
                <li><%= link_to 'Terms of Service', '/pages/tos' %></li>
                <li><%= link_to 'Cookies & Privacy', '/pages/cookies' %></li>
            </ul>

            <% if user_signed_in? %>
                <ul class="my-account">
                    <li><%= link_to "Profile", user_path(current_user.name) %></li>
                    <li><%= link_to "Options", edit_user_path(current_user.name) %></li>
                    <li><%= link_to 'Favorites', favorites_path(current_user.name) %></span></li>
                    <li><%= link_to 'My Uploads', uploads_path(current_user.name) %></span></li>
                    <li><%= link_to 'Logout', destroy_user_session_path %></span></li>
                </ul>
            <% else %>
                <ul class="login register">
                    <h3>Need an account?</h3>
                    <p>With an account you can upload images, edit posts, add comments and many other things.</p>
                    <p>No activation necessary</p>
                    <%= link_to new_user_registration_path, class: 'btn btn-blue' do %>
                    Sign up <%= fa_icon 'user-plus' %>
                    <% end %>
                </ul>

                <ul class="login">
                    <h3>Sign In</h3>
                    <%= form_for(:user, id: 'login', :url => session_path(:user)) do |f| %>
                    <%= f.email_field :email, placeholder: 'email', autocomplete: "off" %>
                    <%= f.password_field :password, placeholder: 'password', autocomplete: "off" %>
                    <%= link_to "Forgot your password?", new_password_path(:user) %>
                    <button class="btn btn-blue" type="submit">Sign in <%= fa_icon "sign-in" %></button>
                    <% end %>
                </ul>
            <% end %>
        </div>

    </div>
</nav>
