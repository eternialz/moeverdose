<div class="row posts">
  <div class="post-container">
    <div class="post" style="background-image: url(<%= image_url('post.jpg') %>)">
      <h2><%= @post.title %></h2>
      <%= image_tag @post.post_image.url %>
      <div class="post-info clearfix">
      <div class="infos">
        <span id="id">ID:<%= @post.id %></span>
        <span id="width-height"><%= @post.id %>px</span>
        <span id="type"><%= @post.id %></span>
        <span id="size"><%= @post.id %></span>
      </div>
      <span><%= fa_icon "upload" %> Uploaded by: <a>Eternialz</a></span>
      <span><%= fa_icon "file" %> Source: Gj-Bu</span>
      </div>
    </div>
    <div id="post-score" class="clearfix">
      <div class="overdose_bar clearfix">
        <span class="overdose_score">0</span>
      </div>
      <a class="overdose"><%= fa_icon "plus-circle" %> MOE OVERDOSE</a>
      <div class="shortage_bar clearfix">
        <span class="shortage_score">0</span>
      </div>
      <a class="shortage">MOE SHORTAGE <%= fa_icon "minus-circle" %></a>
    </div>
    <div class="post-details row">
      <div class="f3 column tags">
        <h3><%= fa_icon "tag" %> Tags</h3>
        <a class="tag">1girl</a>
        <a class="tag">Blush</a>
        <a class="tag">Eating</a>
        <a class="tag">Gj-Bu</a>
        <a class="tag">Intruder</a>
        <a class="tag">Loli</a>
        <a class="tag">Ponytail</a>
        <a class="tag">Purple hair</a>
        <a class="tag">Purple eyes</a>
        <a class="tag">School uniform</a>
      </div>
      <div class="f3 column characters">
        <h3><%= fa_icon "group" %> Character(s)</h3>
        <a class="tag">Shion Sumeragi</a>
      </div>
      <div class="f3 column authors">
        <div class="author">
          <h3><a><%= fa_icon "user" %> Author: Doga Kobo</a></h3>
          <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
          <a><%= fa_icon "link" %> website</a><a><%= fa_icon "user-plus" %> profile</a>
        </div>
      </div>
      <div class="f3 column actions">
        <h3><%= fa_icon "bolt" %> Actions</h3>
        <label class="action action-green" for="post_edit"><%= fa_icon "edit" %> Edit post</label>
        <a class="action action-green"><%= fa_icon "download" %> Download</a>
        <a class="action action-green"><%= fa_icon "heart" %> Add To Favorites</a>
        <a class="action action-green"><%= fa_icon "search" %> More from the same author</a>
        <a class="action action-green"><%= fa_icon "google" %> Search image on google</a>
        <a class="action action-green"><%= fa_icon "close" %> Report post</a>
        <a class="action action-pink previous"><%= fa_icon "arrow-circle-left" %> Previous</a>
        <a class="action action-pink next">Next <%= fa_icon "arrow-circle-right" %> </a>
      </div>
    </div>
    <input type="checkbox" id="post_edit">
    <%= form_for @post, as: "edit_post", url: post_path(@post.id) do |post| %>
      <h2>Edit Post</h2>
      <h3><%= fa_icon "header" %> Title<span class="required">required</span></h3>
      <%= post.text_field :title, placeholder: "Title" %>
      <h3><%= fa_icon "rss" %> Source</h3>
      <%= post.text_field :source, placeholder: "Source" %>
      <h3><%= fa_icon "user" %> Author<span class="required">required</span></h3>
      <input name="author_tag" type="text" value="<%= @tag_author %>">
      <h3><%= fa_icon "tag" %> Tags<span class="required">required (at least three)</span></h3>
      <textarea name="tags" placeholder='Tags ("1girl glasses")'><%= @tags_normal %></textarea>
      <h3><%= fa_icon "group" %> Character(s)</h3>
      <textarea name="characters" placeholder='Characters ("illyasviel_von_einzbern")'><%= @tags_character %></textarea>
      <div style="text-align:center;"><input class="btn" type="submit" value="Modifier le Post"></div>
    <% end %>
