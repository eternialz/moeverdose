<div class="search-form tags-form clearfix">
    <form method="get" action="<%= tags_path %>" class="clearfix" id="search">
        <input id="tags" type="text" name="query" placeholder="Edit the entered tag" value="<%= params[:query] %>"/>
        <button type="submit" form="search" value="Submit"><%= fa_icon "search" %></button>
    </form>
</div>
