<%= form_for current_user, url: user_path(current_user.name), html: {class: "row userprofile edit", method: :patch } do |f| %>
    <div class="user_header clearfix" style="background-image: url(<%= @user.banner(:normal) %>)">
        <img class="avatar" src="<%= @user.avatar(:thumb) %>" width="120" height="120" />
        <h3 class="username"><%= @user.name %></h3><span class="role"><%= @user.role %></span>
        <div class="user_banner">
            <button for="submit" class="btn btn-green"><%= fa_icon "save" %> Save profile</button>
            <h3><%= @user.biography %></h3><br />
            <p>Last seen: <%= @user.current_sign_in_at.to_time.strftime('%B %e at %l:%M %p') %></p>
        </div>
    </div>
    <div class="row user_option">

        <h3>Profile</h3>
        <div class="row clearfix">
            <div class="field_area">
                <p><%= fa_icon "user" %> About me:</p>
                <%= f.text_area :biography, placeholder: "Master of daruma otoshi" %>
            </div>
            <div class="field">
                <%= f.text_field :website, placeholder: "https://mywebsite.me" %>
                <span><%= fa_icon "link" %> Website url:</span>
            </div>
            <div class="field">
                <%= f.text_field :twitter, placeholder: "username" %>
                <span><%= fa_icon "twitter" %> Twitter profile:</span>
            </div>
            <div class="field">
                <%= f.text_field :facebook, placeholder: "https://www.facebook.com/my.profile" %>
                <span><%= fa_icon "facebook" %> Facebook url:</span>
            </div>
        </div>

        <div class="row image">
            <h3>Avatar</h3>
            <div class="banner_upload">
                <%= f.file_field :avatar %>
            </div>
            <%= image_tag @user.avatar, id: "avatar_img" %>
            <p>Files are resized and cropped to 120x120px</p>
        </div>


        <div class="row image">
            <h3>Banner</h3>
            <%= f.file_field :banner %>
            <div id="banner_img" style="background-image: url(<%= @user.banner(:normal) %>)"></div>
            <p>Files are resized and cropped to 1600x300px</p>
        </div>


        <div class="clearfix">
            <h3>Tags</h3>
            <div class="row">
                <div class="field_area">
                    <p><%= fa_icon "tag" %> Favorites tags:</p>
                    <%= text_area :tags, :favorites, placeholder: "1girl brown_hair", value: @user.favorites_tags  %>
                    <p>Favorites tags are displayed as buttons to you when uploading a post to quickly add tags to the post. Replace spaces by underscores and use spaces to separate tags.</p>
                </div>
            </div>

            <div class="row">
                <div class="field_area">
                    <p><%= fa_icon "tag" %> Blacklisted tags:</p>
                    <%= text_area :tags, :blacklisted, placeholder: "1boy", value: @user.blacklisted_tags %>
                    <p>Posts with a blacklisted tag won't be displayed in the post list if you are logged-in. Replace spaces by underscores and use spaces to separate tags.</p>
                </div>
            </div>
        </div>

        <h3>Security</h3>
    </div>
<% end %>
