<h2>All Levels</h2>

<a class="btn btn-green" href="<%= new_admin_level_path%>"><i class="fa fa-plus"></i>Create a Level</a>
<ul class="admin_list levels">
    <% @levels.each do |level| %>
        <span class="button_list">
            <a class="btn btn-pink" href="<%= edit_admin_level_path(level) %>"><i class="fa fa-edit"></i>Edit the Level</a>
        </span>
        <li>
            <h4><%= level.name %></h4>
            Rank: <%= level.rank %><br />
            Exp to next level: <%= level.max_exp %>
        </li>
    <% end %>
</ul>

<div class="general_pagination">
    <%= paginate @levels %>
</div>
