<div class="comment">
    <a class="anchor-id" id="comment_<%= index + 1 %>"></a>
    <div class="card comment-container">
        <div class="comment-metadata">
            <a href="<%= user_path(comment.user.name) %>" class="avatar">
                <% if comment.user.avatar.attached? %>
                    <%= image_tag comment.user.avatar, height: "60", width: "60" %>
                <% else %>
                    <img src="/images/default-user.png" height="60" width="60"/>
                <% end %>
            </a>
            <a href="#comment_<%= index + 1 %>" data-turbolinks="false" class="comment-index">#<%= index + 1 %></a>
        </div>
        <div class="comment-content">
            <a href="<%= user_path(comment.user.name) %>">
                <h5 class="comment-username"><%= comment.user.name %></h5>
                <h6 class="comment-subtitle subtitle subtitle-compact">
                    <span><%= comment.created_at.to_time.strftime('%B %e %Y at %l:%M %p') %></span>
                    <span><%= comment.user.role %></span>
                </h6>
            </a>
            <p class="comment-text"><%= comment.text %></p>
            <div class="comment-links">
                <%= form_for Report.new, as: "report", url: comment_report_path(@post.number, comment), method: :patch, html: {class: "zone report_form field_area", id: 'report_post'} do |report| %>
                    <h4 class="title color-red"><i class="fa fa-exclamation-circle"></i> Report comment</h4>
                    <%= report.text_area :reason, class: "form-textarea", placeholder: "Reason" %>
                    <div class="button-list button-list-right">
                        <button type="submit" form="report_post" class="button-important background-red" type="submit">Report <i class="fa fa-exclamation"></i></button>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
