<%= link_to root_path, class: "action margin" do %>
    <i class="fa fa-arrow-left"></i> Back To Home Screen
<% end %>
<div class="user-form" data-controller="form">

    <%= form_for(resource, as: resource_name, html: {class: "zone user-form-body form"}, url: registration_path(resource_name)) do |f| %>
        <div class="user-form-head">
            <h4 class="title">Member Registration</h4>
        </div>

        <div class="form-field">
            <label class="form-label">Username:</label>
            <%= f.text_field :name, autofocus: true, class: "form-input", placeholder: "MyNickname" %>
            <%= error f, :name %>
        </div>

        <div class="form-field">
            <label class="form-label">Email:</label>
            <%= f.email_field :email, class: "form-input", placeholder: "you@something.com" %>
            <%= error f, :email %>
        </div>

        <div class="form-field">
            <label class="form-label">
                Password:
                <% if @minimum_password_length %>
                    <%= @minimum_password_length %> characters minimum
                <% end %>
            </label>
            <%= f.password_field :password, autocomplete: "off", class: "form-input", placeholder: "Password" %>
            <%= error f, :password %>
        </div>

        <div class="form-field">
            <label class="form-label">Confirmation:</label>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-input", placeholder: "Confirm password" %>
            <%= error f, :password_confirmation %>
        </div>

        <div class="button-list button-list-right">
            <button class="button-primary button-base" type="submit">Sign up <i class="fa fa-user-plus"></i></button>
        </div>
    <% end %>

    <%= render "devise/shared/links" %>
</div>
