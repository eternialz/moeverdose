<%= link_to root_path, class: "action margin" do %>
    <i class="fa fa-arrow-left"></i> Back To Home Screen
<% end %>
<div class="user-form" data-controller="form">

    <%= form_for(resource, as: resource_name, html: {class: "zone user-form-body form"}, url: session_path(resource_name)) do |f| %>
        <div class="user-form-head">
            <h4 class="title">Member Login</h4>
        </div>

        <div class="form-field">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, class: "form-input", autofocus: true %>
            <%= error f, :email %>
        </div>

        <div class="form-field">
            <%= f.label :password, class: "form-label" %>
            <%= f.password_field :password, class: "form-input", autocomplete: "off" %>
            <%= error f, :password %>
        </div>

        <% if devise_mapping.rememberable? -%>
            <div class="form-field form-checkbox">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, class: "form-checkbox", "aria-role": "checkbox" %>
            </div>
        <% end -%>

        <div class="button-list button-list-right">
            <button class="button-important button-base" type="submit">Sign in <i class="fa fa-sign-in-alt"></i></button>
        </div>
    <% end %>

    <%= render "devise/shared/links" %>
</div>
